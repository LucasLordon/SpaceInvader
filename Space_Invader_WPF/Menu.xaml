<Window x:Class="Space_Invader_WPF.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Invader_WPF"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/BackGround.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="BtnPlay" Content="Open MainWindow"  HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click" Height="81" Width="294" Margin="0,102,0,0">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FFFD0000" Opacity="0"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="/PlayButtonV2.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
